{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["jest" ,"node"],
    "isolatedModules": true,
  },
  "include": [
    "src/**/*",
    "src/test/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/test/**/*",
    "src/**/__test__/**/*",
    "src/**/__tests__/**/*"
  ]
}